{
  "view": {
    "type": "div"
  },
  "group": {
    "type": "div"
  },
  "text": {
    "type": "span"
  },
  "heading1": {
    "type": "h1"
  },
  "image": {
    "type": "img",
    "attrs": {
      "src": "$attrs.url"
    }
  },
  "textinput": {
    "type": "input",
    "attrs": {
      "type": "text"
    }
  },
  "link": {
    "type": "a",
    "attrs": {
      "href": "$attrs.url",
      "target": "_blank"
    }
  },
  "button": {
    "type": "button"
  },
  "list": {
    "type": "ul",
    "repeat": {
      "content": {
        "type": "li",
        "key": "item-$source",
        "children": ["$source"]
      },
      "dataSource": "$attrs.items"
    }
  },
  "dropdown": {
    "type": "select",
    "repeat": {
      "content": {
        "type": "option",
        "key": "option-$source",
        "children": ["$source"]
      },
      "dataSource": "$attrs.options"
    }
  }
}
