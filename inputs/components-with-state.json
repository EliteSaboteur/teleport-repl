{
  "$schema": "https://raw.githubusercontent.com/teleporthq/uidl-definitions/master/project.json",
  "name": "myVueProject",
  "root": {
    "name": "App",
    "stateDefinitions": {
      "router": {
        "type": "router",
        "defaultValue": "index",
        "values": [
          {
            "value": "index",
            "meta": {
              "componentName": "Home"
            }
          }
        ]
      }
    },
    "content": {
      "type": "state",
      "key": "router",
      "states": [
        {
          "value": "index",
          "content": {
            "type": "group",
            "key": "container",
            "children": [
              {
                "type": "view",
                "key": "accordions",
                "style": {
                  "width": "100%",
                  "border": "1px solid red"
                },
                "children": [
                  {
                    "type": "ExpandableArea",
                    "key": "area1",
                    "attrs": {
                      "title": "First",
                      "text": "Text"
                    },
                    "dependency": {
                      "type": "local"
                    }
                  },
                  {
                    "type": "ExpandableArea",
                    "key": "area2",
                    "attrs": {
                      "title": "Second",
                      "text": "Text"
                    },
                    "dependency": {
                      "type": "local"
                    }
                  },
                  {
                    "type": "ExpandableArea",
                    "key": "area3",
                    "attrs": {
                      "title": "Third",
                      "text": "Text"
                    },
                    "dependency": {
                      "type": "local"
                    }
                  }
                ]
              },
              {
                "type": "view",
                "key": "tab-selector",
                "style": {
                  "width": "100%",
                  "border": "1px solid red"
                },
                "children": [
                  {
                    "type": "TabSelector",
                    "key": "tabs",
                    "dependency": {
                      "type": "local"
                    }
                  }
                ]
              },
              {
                "type": "view",
                "key": "modal-window",
                "style": {
                  "width": "100%",
                  "border": "1px solid red"
                },
                "children": [
                  {
                    "type": "Modal",
                    "key": "modal",
                    "dependency": {
                      "type": "local"
                    }
                  }
                ]
              }
            ]
          }
        }
      ]
    }
  },
  "components": {
    "ExpandableArea": {
      "name": "ExpandableArea",
      "propDefinitions": {
        "title": {
          "type": "string",
          "defaultValue": "Hello"
        },
        "text": {
          "type": "string",
          "defaultValue": "Is it me you're looking for?"
        }
      },
      "stateDefinitions": {
        "isExpanded": {
          "type": "boolean",
          "defaultValue": false
        }
      },
      "content": {
        "type": "view",
        "key": "container",
        "children": [
          {
            "type": "text",
            "key": "title",
            "children": ["$props.title"]
          },
          {
            "type": "button",
            "key": "button",
            "children": [{
              "type": "state",
              "key": "isExpanded",
              "states": [
                {
                  "value": true,
                  "content": "Collapse"
                },
                {
                  "value": false,
                  "content": "Expand"
                }
              ]
            }],
            "events": {
              "onClick": [
                {
                  "type": "stateChange",
                  "modifies": "isExpanded",
                  "newState": "$toggle"
                }
              ]
            }
          },
          {
            "type": "state",
            "key": "isExpanded",
            "states": [
              {
                "value": true,
                "content": {
                  "type": "view",
                  "key": "expanded-area",
                  "children": ["$props.text"]
                }
              }
            ]
          }
        ]
      }
    },
    "TabSelector": {
      "name": "TabSelector",
      "stateDefinitions": {
        "activeTab": {
          "type": "number",
          "defaultValue": 0
        }
      },
      "content": {
        "type": "view",
        "key": "container",
        "children": [
          {
            "type": "view",
            "key": "tabs",
            "children": [
              {
                "type": "button",
                "key": "tab1",
                "children": ["Click"],
                "events": {
                  "onClick": [{
                    "type": "stateChange",
                    "modifies": "activeTab",
                    "newState": 0
                  }]
                }
              },
              {
                "type": "button",
                "key": "tab2",
                "children": ["any"],
                "events": {
                  "onClick": [{
                    "type": "stateChange",
                    "modifies": "activeTab",
                    "newState": 1
                  }]
                }
              },
              {
                "type": "button",
                "key": "tab3",
                "children": ["of"],
                "events": {
                  "onClick": [{
                    "type": "stateChange",
                    "modifies": "activeTab",
                    "newState": 2
                  }]
                }
              },
              {
                "type": "button",
                "key": "tab4",
                "children": ["these"],
                "events": {
                  "onClick": [{
                    "type": "stateChange",
                    "modifies": "activeTab",
                    "newState": 3
                  }]
                }
              }
            ]
          },
          {
            "type": "view",
            "key": "text",
            "children": [
              "Active tab: ",
              "$state.activeTab"
            ]
          },
          {
            "type": "state",
            "key": "activeTab",
            "states": [
              {
                "value": 0,
                "content": {
                  "type": "text",
                  "key": "text1",
                  "children": ["This is the first tab"]
                }
              },{
                "value": 1,
                "operation": ">=",
                "content": {
                  "type": "text",
                  "key": "text2",
                  "children": ["This is the second tab"]
                }
              },{
                "value": 2,
                "content": {
                  "type": "text",
                  "key": "text3",
                  "children": ["This is the third tab"]
                }
              },{
                "value": 3,
                "content": {
                  "type": "text",
                  "key": "text4",
                  "children": ["This is the fourth tab"]
                }
              }
            ]
          }
        ]
      }
    },
    "Modal": {
      "name": "Modal",
      "stateDefinitions": {
        "isOpen": {
          "type": "boolean",
          "defaultValue": false
        }
      },
      "content": {
        "type": "group",
        "key": "container",
        "children": [
          {
            "type": "button",
            "key": "openmodal",
            "children": ["Show Popup"],
            "events": {
              "onClick": [{
                "type": "stateChange",
                "modifies": "isOpen",
                "newState": true
              }]
            }
          },
          {
            "type": "state",
            "key": "isOpen",
            "states": [
              {
                "value": true,
                "content": {
                  "type": "ModalWindow",
                  "key": "window",
                  "dependency": {
                    "type": "local"
                  },
                  "events": {
                    "onClose": [{
                      "type": "stateChange",
                      "modifies": "isOpen",
                      "newState": false
                    }]
                  }
                }
              }
            ]
          }
        ]
      }
    },
    "ModalWindow": {
      "name": "ModalWindow",
      "propDefinitions": {
        "message": {
          "type": "string",
          "defaultValue": "Hello"
        },
        "onClose": {
          "type": "func",
          "defaultValue": "() => {}"
        }
      },
      "content": {
        "type": "view",
        "key": "container",
        "children": [
          {
            "type": "text",
            "key": "text",
            "children": ["$props.message"]
          },
          {
            "type": "button",
            "key": "close",
            "children": ["Close me"],
            "events": {
              "onClick": [{
                "type": "propCall",
                "calls": "onClose"
              }]
            }
          }
        ]
      }
    }
  }
}